{
  "compilerOptions": {
    "lib": ["esnext"],
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@": ["./*"],
      "@/src/*": ["./src/*"],
      "@/handlers/*": ["./src/handlers/*"],
      "@/modules/*": ["./src/modules/*"],
    },
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "exclude": ["node_modules", "dist"]
}
